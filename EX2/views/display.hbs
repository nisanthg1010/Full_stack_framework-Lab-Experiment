<div class="display-container">
  <h2>Interview Candidate Details</h2>

  <div class="profile-photo">
    <img src="/uploads/{{photo}}" alt="Profile Photo">
  </div>

  <table>
    <tr><th>Name</th><td>{{name}}</td></tr>
    <tr><th>Roll No</th><td>{{rollno}}</td></tr>
    <tr><th>Contact</th><td>{{phone}}</td></tr>
    <tr><th>Email</th><td>{{email}}</td></tr>
    <tr><th>Favourite Color</th>
      <td><div style="width:30px; height:30px; background-color:{{favColor}}; border:1px solid #ccc;"></div></td></tr>
    <tr><th>Resume</th><td><a href="/uploads/{{resume}}" target="_blank">View Resume</a></td></tr>
  </table>

  <a class="back-btn" href="/">Back to Form</a>
</div>
