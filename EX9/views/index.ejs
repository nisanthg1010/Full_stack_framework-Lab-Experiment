<!DOCTYPE html>
<html>
<head>
  <title>Quiz Registration</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="container">
  <h1>Student Quiz Registration</h1>
  <form action="/start-quiz" method="POST" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="Name" required><br>
    <input type="text" name="roll" placeholder="Roll No" required><br>
    <input type="text" name="mobile" placeholder="Mobile No" required><br>
    <input type="email" name="email" placeholder="Email" required><br>
    <input type="file" name="photo" required><br>
    <select name="course" required>
      <% courses.forEach(course => { %>
        <option value="<%= course %>"><%= course.toUpperCase() %></option>
      <% }) %>
    </select><br>
    <button type="submit" class="btn">Start Quiz</button>
  </form>
</div>
</body>
</html>
